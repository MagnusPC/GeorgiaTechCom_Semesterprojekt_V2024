@if (book != null)
{   
<div class="book-frame">
    <div class="book-title">
        <div>
            @book.Name
        </div>
        <div>
            @book.Category
        </div>
    </div>
    <div style="font-size: 2rem; justify-content: center;">
        @book.Price $
    </div>
</div>
}

@code {
    [Parameter]
    public Book? book { get; set; }
}

